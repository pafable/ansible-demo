--- # UNTIL
- hosts: apacheweb
  sudo: yes
  connection: ssh
  user: test
  gather_facts: no
  tasks:
  - name: Install apache 
    yum: pkg=httpd state=latest
  - name: Verify apache status
    shell: systemctl status httpd
    register: result
    until: result.stdout.find("active (running)") != -1 
    retries: 5
    delay: 7
  - debug: var=result
